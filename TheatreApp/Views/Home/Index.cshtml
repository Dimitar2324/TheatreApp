@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="position-relative text-white text-center mb-4"
         style="background: linear-gradient(to bottom, rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
                 url('/images/theatre-hall.jpg') center/cover no-repeat;
                 height: 60vh; border-radius: 12px;">
        <div class="position-absolute top-50 start-50 translate-middle">
            <h1 class="display-1 fw-bold text-warning text-uppercase" style="font-size: 4rem;">Welcome!</h1>
            <p class="lead text-light fw-bold fs-4">Discover the Best Plays in Sofia!</p>
            <div class="mt-3">
                <a asp-controller="Play" asp-action="Index"
                   class="btn btn-outline-light fw-bold rounded-pill px-4 py-2 shadow-sm">
                    <i class="bi bi-mask"></i> Browse Plays
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
}

@section Styles {
    <link rel="stylesheet" href="~/css/user-styles.css">
}
