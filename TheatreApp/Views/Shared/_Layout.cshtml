@{
	int currentYear = DateTime.UtcNow.Year;
	string footerNote = (2025 == currentYear) ? $"{currentYear}" : $"{2025} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/TheatreApp.Web.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

	@if (ViewData["Title"] != null && ViewData["Title"] == "Explore Performances")
	{
		<link rel="stylesheet" href="~/css/user-styles.css" asp-append-version="true" />
	}

	@await RenderSectionAsync("Styles", false)

</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-lg">
			<div class="container-fluid">
				<a class="navbar-brand fw-bold text-warning" asp-area="" asp-controller="Home" asp-action="Index">
					TheatreWebApp
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
						aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-light" asp-area="" asp-controller="Play" asp-action="Index">
								<i class="bi bi-mask"></i> Plays
							</a>
						</li>
						@if (User?.Identity?.IsAuthenticated ?? false)
						{
							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Ticket" asp-action="Index">
									<i class="bi bi-ticket"></i> Tickets
								</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Performance" asp-action="Index">
									<i class="bi bi-file-spreadsheet"></i> Performances
								</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Favourite" asp-action="Index">
									<i class="bi bi-heart"></i> Favourites
								</a>
							</li>

							<li class="nav-item">
								<a class="nav-link text-light" asp-area="" asp-controller="Play" asp-action="Add">
									<i class="bi bi-file-plus"></i> Add Play
								</a>
							</li>
						}

					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			<p>&copy; @footerNote TheatreWebApp | Bringing Best Plays to You!</p>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>


