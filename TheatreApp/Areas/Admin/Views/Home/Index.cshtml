<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-3 text-warning fw-bold">Welcome to the Admin Dashboard</h1>
        <p class="lead mb-5 text-warning">Manage your application using the sections below:</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-lg border border-danger bg-white text-dark rounded-3 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="bi bi-people-fill text-warning display-3 mb-3"></i>
                    <h5 class="card-title fw-bold text-danger">Manage Users</h5>
                    <p class="card-text text-secondary">Add, edit, or remove users and assign roles.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index"
                           class="btn btn-warning fw-bold shadow-sm w-100 py-2">
                            <i class="bi bi-person-badge-fill"></i> Go to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border border-danger bg-white text-dark rounded-3 h-100">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="bi bi-mask text-danger display-3 mb-3"></i>
                    <h5 class="card-title fw-bold text-danger">Manage Plays</h5>
                    <p class="card-text text-secondary">Add, Delete or Restore existing plays.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="PlayManagement" asp-action="Manage"
                           class="btn btn-danger fw-bold shadow-sm w-100 py-2">
                            <i class="bi bi-mask"></i> Go to Plays
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



