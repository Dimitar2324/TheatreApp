@using TheatreApp.Web.ViewModels.Admin.PlayManagement
@model IEnumerable<PlayManagementIndexViewModel>

@{
    ViewData["Title"] = "Manage Plays";
}

<div class="container mt-4">
    <h1 class="text-center mb-4 text-warning fw-bold">Manage Plays</h1>
    <p class="text-center text-muted">The place to Add, Delete or Restore Plays.</p>

    <div class="d-flex justify-content-between mb-3">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>

        <a asp-action="Add" class="btn btn-success fw-bold shadow-lg">
            <i class="bi bi-plus-circle"></i> Add Play
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-exclamation-circle"></i> No plays available. Click "Add Play" to create one.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover shadow-lg rounded-3 border border-warning bg-white">
                <thead>
                    <tr class="text-center border border-warning">
                        <th class="text-warning border border-warning">Title</th>
                        <th class="text-warning border border-warning">Genre</th>
                        <th class="text-warning border border-warning">Duration</th>
                        <th class="text-warning border border-warning">Author</th>
                        <th class="text-warning border border-warning">Release Date</th>
                        <th class="text-warning border border-warning">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var play in Model)
                    {
                        <tr class="text-dark text-center border border-warning align-middle @(play.IsDeleted ? "table-danger" : "")">
                            <td class="fw-bold border border-warning">
                                @play.Title
                                @if (play.IsDeleted)
                                {
                                    <span class="badge bg-danger ms-2">Deleted</span>
                                }
                            </td>
                            <td class="border border-warning">@play.Genre</td>
                            <td class="border border-warning">@play.Duration min</td>
                            <td class="border border-warning">@play.Author</td>
                            <td class="border border-warning">@play.ReleaseDate</td>
                            <td class="border border-warning">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="ToggleDelete"
                                       asp-route-id="@play.Id"
                                       class="btn @(play.IsDeleted ? "btn-warning" : "btn-danger") btn-sm fw-bold px-3 py-2">
                                        <i class="bi @(play.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                        @(play.IsDeleted ? "Restore" : "Delete")
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>



